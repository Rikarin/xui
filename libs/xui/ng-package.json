{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/libs/xui",
  "assets": [
    {
      "glob": "index.scss",
      "input": "src",
      "output": "."
    },
    {
      "glob": "**/*.scss",
      "input": "src",
      "output": "."
    }
  ],
  "allowedNonPeerDependencies": [
    "ngx-image-cropper",
    "@ngneat/until-destroy"
  ],
  "lib": {
    "entryFile": "src/index.ts"
  }
}
