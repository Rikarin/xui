{
  "$schema": "../../node_modules/ng-packagr/ng-package.schema.json",
  "dest": "../../dist/libs/theme-default",
  "assets": [
    {
      "glob": "index.scss",
      "input": "src",
      "output": "."
    },
    {
      "glob": "**/*.scss",
      "input": "src",
      "output": "."
    }
  ],
  "allowedNonPeerDependencies": ["@xui/theme-core"],
  "lib": {
    "styleIncludePaths": ["../theme-core/src"],
    "entryFile": "src/index.ts"
  }
}
